<div class="row">
  <div class="col-md-12">
    <% flash.each do |name, msg| %>
      <% if msg.is_a?(String) %>
        <div id="notification" class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">


          <%= content_tag :div, raw(msg), :id => "flash_#{name}" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
