<div class="modal-header">
  <h4><%= "Editing #{@entry.name}" %></h4>
</div>
<div class="modal-dialog">
  <div class="modal-content">
    <%= simple_form_for @entry, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors text-danger">
        </ul>

        <div class="form-group">
          <%=f.input :date %>
        </div>
        <div class="form-group">
          <%=f.input :description %>
        </div>
        <div class="form-group">
          <%=f.input :reference_number %>
        </div>
      </div>
      <%=simple_fields_for :debit_amounts do |ff| %>
      <%=ff.input :amount %>
      <%=ff.input :account, collection: Accounting::Account.all.pluck(:name) %>
      <% end %>
      <%=simple_fields_for :credit_amounts do |ff| %>
      <%=ff.input :amount %>
      <%=ff.input :account, collection: Accounting::Account.all.pluck(:name) %>
      <% end %>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
