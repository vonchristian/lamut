<div class="row">
  <div class="col-md-12">
  <div class="box box-solid">
    <div class="box-header">

    </div>
    <div class="box-body">
<div class="table table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Business Name</th>
      <th> Taxpayer </th>
      <th> Address </th>


    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= image_tag(business.logo.url(:small), width: 35, height: 35) %></td>
        <td><%= link_to business.name.try(:upcase), business %>
            <small class="help-block"><i class="icon-list"></i> <%=business.line_of_businesses.try(:details) %></small>
        </td>
        <td><%= business.taxpayer_name %></td>
        <td><%= business.current_address %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
