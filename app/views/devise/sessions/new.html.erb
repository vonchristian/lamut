
<div class="container">
<br>
<br>
<br>
<div class="row">

<div class="col-md-8 col-md-offset-2">

<div class="panel panel-default">
<div class="panel-body">

<%= simple_form_for(resource, as: resource_name, :url => session_path(resource_name),
       wrapper_mappings: {boolean: :vertical_boolean }) do |f| %>

<div class="row">
  <div class="col-md-4 col-md-offset-1">
    <h1>Login</h1>
                                    <p class="text-muted">Sign In to your account</p>
<div class="input-group">
<span class="input-group-addon"><i class="icon-user"></i>
                                    </span>
 <%= f.input :email, placeholder: "Email", label: false %>

</div>
<br>
<div class="input-group">
  <span class="input-group-addon"><i class="icon-lock"></i>
                                      </span>
    <%= f.input :password, placeholder: "Password", label: false  %>

</div>
<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
<hr>
<%= f.submit "Login", class: "btn btn-info btn-flat", data: {disable_with: "Signing in..."} %>
<% end %>
</div>
<div class="col-md-5 col-md-offset-1">
    <h4 class="title"> Convenient Business Registration</h4>
    <i class="fa fa-list-alt fa-2x"></i> Application <br><br>
    <i class="fa fa-money fa-2x"></i> Payment <br><br>
    <i class="fa fa-check fa-2x"></i> Approval <br>

  </div>

</div>


<br>
</div>

</div>

</div>
