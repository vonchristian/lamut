<div class="tab-pane" id="fees">
  <h4 class="box-title"> Fees Settings </h4>
  <div class="row">
    <div class="col-md-6">
      <div class="box box-default">
        <div class="box-header with-border">
          <i class="icon-layers"></i>  Fee Settings
          <span class="pull-right">
            <%=link_to new_settings_fee_path do %>
              <btn class="btn btn-danger btn-flat"><i class="icon-plus"></i> New Fee </btn>
            <% end %>
          </span>
        </div>
        <div class="box-body">
          <% Fee.all.order(:name).each do |fee| %>
          <div class="row">
            <div class="col-md-4">
              <p class="text-muted"><%= fee.name %></p>
            </div>
            <div class="col-md-2">
              <small><%=fee.type.gsub!("Fees::", "").try(:titleize) %></small>
            </div>
            <div class="col-md-2">
              <%=number_to_currency fee.amount %>
            </div>
            <div class="col-md-2">
              <span class="pull-right">
                <%#=link_to edit_settings_business_classification_path(business_classification) do %>
                  <span title="Edit Business Classification" data-toggle="tooltip"><i class="icon-note"></i></span>
                <%# end %>
              </span>
            </div>
          </div>
          <br>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
