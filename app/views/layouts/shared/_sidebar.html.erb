<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
      <!-- Sidebar user panel -->
      <div class="user-panel">
        <div class="pull-left image">
          <%=image_tag(current_user.photo.url(:small), class: "img-circle", width: 30, height: 30) %>
        </div>
        <div class="pull-left info">
          <p><%=current_user.first_name_and_last_name %></p>
          <a href="#"><i class="fa fa-circle text-success"></i> <%=current_user.role.try(:titleize).try(:upcase) %></a>
        </div>
      </div>
      <!-- search form -->
      <form action="#" method="get" class="sidebar-form">
        <div class="input-group">
          <input type="text" name="q" class="form-control" placeholder="Search...">
              <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
                </button>
              </span>
        </div>
      </form>
      <!-- /.search form -->
      <!-- sidebar menu: : style can be found in sidebar.less -->
      <ul class="sidebar-menu">
          <li><a href="/"><i class="icon-speedometer"></i> <span> &nbsp; &nbsp;  Dashboard</span></a></li>
        <li><a href="/taxpayers"><i class="icon-user"></i> <span> &nbsp; &nbsp; Taxpayers</span></a></li>
        <li><a href="/businesses"><i class="icon-speedometer"></i> <span> &nbsp; &nbsp;  Businesses</span></a></li>
        <% if current_user.bplo_officer? %>
          <li><a href="/settings"><i class="icon-settings"></i> <span> &nbsp; &nbsp;  Setings</span></a></li>
        <% end %>
        <li><a href="/collections"><i class="icon-credit-card"></i> <span> &nbsp; &nbsp;  Collections</span></a></li>


    </section>
    <!-- /.sidebar -->
  </aside>
