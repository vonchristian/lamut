<div class="row">
  <div class="col-md-3">

    <!-- Profile Image -->
    <div class="box box-default">
      <div class="box-body box-profile">
        <%=image_tag(@business.logo.url(:thumb), class: "profile-user-img img-responsive img-circle") %>

        <h3 class="profile-username text-center"><%=@business.name.titleize %></h3>

        <p class="text-muted text-center">  <%=image_tag(@business.taxpayer.photo.url(:small), width: 25, height: 25, class: 'img-circle') %> &nbsp; <%=@business.taxpayer.try(:first_name_and_last_name) %></p>

        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>Followers</b> <a class="pull-right">1,322</a>
          </li>
          <li class="list-group-item">
            <b>Following</b> <a class="pull-right">543</a>
          </li>
          <li class="list-group-item">
            <b>Friends</b> <a class="pull-right">13,287</a>
          </li>
        </ul>

        <div class="row">
           <div class="col-md-2">
           </div>
           <div class="col-md-8">
             <%=link_to "Update Info", edit_business_path(@business), class: "btn btn-primary btn-flat btn-block" %>
           </div>
           <div class="col-md-2">
           </div>
         </div>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->

    <!-- About Me Box -->
    <div class="box box-default">
      <div class="box-header with-border">
        <h3 class="box-title">Business Details</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <strong><i class="fa fa-book margin-r-5"></i> Education</strong>

        <p class="text-muted">
          B.S. in Computer Science from the University of Tennessee at Knoxville
        </p>

        <hr>

        <strong><i class="fa fa-map-marker margin-r-5"></i> Location</strong>

        <p class="text-muted">Malibu, California</p>

        <hr>

        <strong><i class="fa fa-pencil margin-r-5"></i> Skills</strong>

        <p>
          <span class="label label-danger">UI Design</span>
          <span class="label label-success">Coding</span>
          <span class="label label-info">Javascript</span>
          <span class="label label-warning">PHP</span>
          <span class="label label-primary">Node.js</span>
        </p>

        <hr>

        <strong><i class="fa fa-file-text-o margin-r-5"></i> Notes</strong>

        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam fermentum enim neque.</p>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
  <!-- /.col -->
  <div class="col-md-9">
    <div class="nav-tabs-custom">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#info" data-toggle="tab">Business Info</a></li>
        <li><a href="#timeline" data-toggle="tab">Assessment</a></li>
        <li><a href="#timeline" data-toggle="tab">Taxes and Fees</a></li>
        <li><a href="#settings" data-toggle="tab">Approval</a></li>
        <li><a href="#settings" data-toggle="tab">Settings</a></li>

      </ul>

    <div class="tab-content">
     <%=render 'businesses/partials/info' %>
     <%=render 'businesses/partials/taxes_and_fees' %>
     <%=render 'businesses/partials/settings' %>


    </div>
    <!-- /.tab-content -->
  </div>
  <!-- /.nav-tabs-custom -->
</div>
<!-- /.col -->
</div>
