<div class="col-md-6 col-md-offset-3">
  <div class="box box-danger">
    <div class="box-header with-border">
      <h4 class="box-title">Update Line of Business Details </h4>
    </div>
    <div class="box-body">
      <%=simple_form_for @line_of_business, url: :settings_line_of_business do |f| %>
        <%=f.error_notification %>
        <%=f.input :name %>
        <%=f.input :line_of_business_classification_id, collection: LineOfBusinessClassification.all.map{|a| [a.name, a.id]}, as: :radio_buttons, label: "Classification" %>
        <%=f.simple_fields_for :mayors_permit_fee do |m| %>
          <%=m.input :amount %>
        <% end %>
      </div>
      <div class="box-footer">
        <%=link_to "Cancel", settings_line_of_businesses_path, class: "btn btn-default btn-flat pull-left" %>
        <%=f.submit "Update", class: "btn btn-primary btn-flat pull-right" %>
      </div>
    <% end %>
  </div>
</div>
