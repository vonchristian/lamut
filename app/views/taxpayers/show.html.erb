<div class="row">
       <div class="col-md-3">

         <!-- Profile Image -->
         <div class="box box-primary">
           <div class="box-body box-profile">
             <%=image_tag(@taxpayer.photo.url(:thumb), class: "profile-user-img img-responsive img-circle") %>

             <h3 class="profile-username text-center"><%= @taxpayer.first_name_and_last_name %></h3>

             <p class="text-muted text-center"><%=@taxpayer.current_address.try(:address_details) %></p>

             <ul class="list-group list-group-unbordered">
               <li class="list-group-item">
                 <b>Businesses</b> <a class="pull-right"><%=@taxpayer.businesses.count %></a>
               </li>
               <li class="list-group-item">
                 <b>Real Properties</b> <a class="pull-right"></a>
               </li>
               <li class="list-group-item">
                 <b>Motorized Tricycles</b> <a class="pull-right"></a>
               </li>

             </ul>
             <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                  <%=link_to "Update Info", edit_taxpayer_path(@taxpayer), class: "btn btn-primary btn-flat btn-block" %>
                </div>
                <div class="col-md-2">
                </div>
              </div>

           </div>
           <!-- /.box-body -->
         </div>
         <!-- /.box -->

         <!-- About Me Box -->
         <div class="box box-solid">
           <div class="box-header with-border">
             <h3 class="box-title">About <%=@taxpayer.first_name %></h3>
           </div>
           <!-- /.box-header -->
           <div class="box-body">
             <strong><i class="fa fa-book margin-r-5"></i> TIN
                 <%= link_to "Add TIN", new_taxpayer_tin_path(@taxpayer), class: "btn btn-default btn-xs pull-right" %>
             </strong>

             <p class="text-muted">
              <%=@taxpayer.tin_number %>

             </p>

             <hr>

             <strong><i class="fa fa-map-marker margin-r-5"></i> Address</strong>
             <% if @taxpayer.addresses.current.present? %>
             <span class="pull-right">
                <%=link_to edit_address_path(@taxpayer.current_address.id) do %>
                  <btn class="btn btn-default btn-xs" title="Edit Address", data-toggle="tooltip"><i class="fa fa-pencil"></i></span>
                <% end %>
              </span>
              <% end %>

             <p class="text-muted"><%=@taxpayer.current_address.try(:address_details) %>
             </p>

             <hr>
             <strong><i class="fa fa-phone margin-r-5"></i> Mobile Number</strong>

             <p class="text-muted"><%=@taxpayer.mobile_number %></p>

             <hr>
             <strong><i class="fa fa-male"></i> Gender</strong>

             <p class="text-muted"><%=@taxpayer.sex.try(:capitalize) %></p>

             <hr>
             <strong><i class="fa fa-gender"></i> Civil Status</strong>

             <p class="text-muted"><%=@taxpayer.civil_status.try(:capitalize) %></p>

             <hr>


           </div>
           <!-- /.box-body -->
         </div>
         <!-- /.box -->
       </div>
       <!-- /.col -->
       <div class="col-md-9">
         <div class="nav-tabs-custom">
           <ul class="nav nav-tabs">
             <li class="active"><a href="#businesses" data-toggle="tab">Businesses</a></li>
             <li><a href="#timeline" data-toggle="tab">Real Properties</a></li>
             <li><a href="#settings" data-toggle="tab">Motorized Tricycles</a></li>
             <li><a href="#settings" data-toggle="tab">Activity Logs</a></li>
             <li><a href="#settings" data-toggle="tab">Settings</a></li>


           </ul>
           <div class="tab-content">
            <%=render 'taxpayers/partials/businesses' %>
           </div>
           <!-- /.tab-content -->
         </div>
         <!-- /.nav-tabs-custom -->
       </div>
       <!-- /.col -->
     </div>
